{#
/**
 * @file
 * CivicTheme implementation to display a dropdown filter for form element.
 */
#}
{% embed '@molecules/dropdown-filter/dropdown-filter.twig' %}
  {% block filter_options %}
    {% embed '@atoms/fieldset/fieldset.twig' with {
      legend: options_title is not empty ? options_title : null,
      modifier_class: 'ct-dropdown-filter__fieldset',

    } %}
      {% block children %}
        {% include '@molecules/form-element/form-element.twig' with {
          description: {
            content: '',
            attributes: ''
          }
        } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
